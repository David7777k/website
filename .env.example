# Database
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - uncomment for production
# DATABASE_URL="postgresql://user:password@localhost:5432/panda_lounge?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# QR System Security
QR_SECRET="your-qr-secret-key-change-in-production"
QR_TTL_MINUTES="60"

# Google OAuth (для входа через Google)
# Получите ключи в Google Cloud Console: https://console.cloud.google.com/
# Инструкция: см. SECRETS_SETUP.md
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Maps API (для карт и направлений)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Spotify API (для джукбокса)
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

# Tips are now handled via direct card transfers
# No payment gateway integration needed

# Application Settings
APP_NAME="PANDA Lounge"
APP_URL="http://localhost:3000"

# Environment
NODE_ENV="development"