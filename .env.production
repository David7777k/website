# Production Environment Configuration
# Use this file as a template for Vercel deployment

# Database - PostgreSQL Production
# Replace with your actual PostgreSQL URL from:
# - Vercel Postgres: https://vercel.com/docs/storage/vercel-postgres
# - Supabase: https://supabase.com/
# - Railway: https://railway.app/
# - Neon: https://neon.tech/
DATABASE_URL="postgresql://user:password@host:5432/panda_lounge?sslmode=require"

# NextAuth Configuration
# CRITICAL: Replace with your production domain
NEXTAUTH_URL="https://your-domain.vercel.app"
# Generate new secret: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_NEW_SECRET_FOR_PRODUCTION"

# QR Code Security System
# CRITICAL: Generate new secret for production
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
QR_SECRET="GENERATE_NEW_SECRET_FOR_PRODUCTION"
QR_TTL_MINUTES="60"

# Google OAuth
# Update redirect URI to: https://your-domain.vercel.app/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional APIs
GOOGLE_MAPS_API_KEY=""
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""

# Application Settings
APP_NAME="PANDA Lounge"
APP_URL="https://your-domain.vercel.app"

# Environment
NODE_ENV="production"
